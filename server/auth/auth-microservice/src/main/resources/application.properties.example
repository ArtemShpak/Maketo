# Spring Application Configuration Template
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.show-sql=true
spring.jpa.hibernate.ddl-auto=create-drop
# JPA/Hibernate Configuration

spring.config.import=jwt.properties
# Import JWT configuration

spring.datasource.password=YOUR_DATABASE_PASSWORD
spring.datasource.username=YOUR_DATABASE_USERNAME
spring.datasource.url=jdbc:postgresql://localhost:5432/YOUR_DATABASE_NAME
spring.datasource.driver-class-name=org.postgresql.Driver
# Database Configuration

server.port=8080
spring.application.name=auth-microservice

# Copy this file to application.properties and fill in your actual values

